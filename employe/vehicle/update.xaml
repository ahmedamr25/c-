<Window x:Class="views.employe.vehicle.update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:views.employe.vehicle"
        mc:Ignorable="d"
        Title="update" Height="450" Width="800" 
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush 
                        Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="10"                    
            BorderThickness="2"
            Opacity="0.95" Height="450" VerticalAlignment="Bottom">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>



                    <Button x:Name="btnMinimize"                           
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button x:Name="btnClose"                          
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click" RenderTransformOrigin="1.176,0.544">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFDA5234"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFC62D2D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="220"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,35,0,0">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"/>

                </StackPanel>
                <Label Content="Update Vehicle" HorizontalAlignment="Center" Height="55" Margin="0,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="194" FontWeight="Bold" FontStyle="Italic" FontSize="24" Foreground="#FFC5CE18"/>
                <Button Content="" HorizontalAlignment="Left" Height="49" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="54" Foreground="#FF97958B" BorderBrush="#FFEEEDEB" FontSize="18" FontWeight="Bold" FontFamily="Times New Roman" RenderTransformOrigin="-0.623,0.107" Click="btn_return">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/icons8-back-100.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <TextBox x:Name="Email_Copy"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="166,109,410,279" Grid.Row="1">

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                  Margin="166,88,410,314" Grid.Row="1"><Run Language="fr-fr" Text="Brand"/></TextBlock>
                <Button x:Name="btnLogin_Copy"                          
                    BorderThickness="0"
                    Content=""
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                     Margin="315,355,328,21" Grid.Row="1" BorderBrush="#FF1EE813" OpacityMask="#FF47F015">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/update_1601884.png" Stretch="Uniform"/>
                    </Button.Background>
                    <Button.Foreground>
                        <ImageBrush ImageSource="/images/ui-element_15768319.png" Stretch="Uniform"/>
                    </Button.Foreground>

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="150" Height="40"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="166,142,410,260" Grid.Row="1"><Run Language="fr-fr" Text="Model"/></TextBlock>
                <TextBox x:Name="Email_Copy1"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="166,156,410,232" Grid.Row="1">

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <DatePicker HorizontalAlignment="Left" Margin="166,208,0,0" Grid.Row="1" VerticalAlignment="Top" Width="220" />
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="166,240,410,162" Grid.Row="1"><Run Language="fr-fr" Text="Licancse Plate"/></TextBlock>
                <TextBox x:Name="Email_Copy2"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="166,259,410,129" Grid.Row="1">

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="526,84,50,318" Grid.Row="1"><Run Language="fr-fr" Text="Color"/></TextBlock>
                <TextBox x:Name="Email_Copy3"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="526,100,50,288" Grid.Row="1" >

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="526,130,50,272" Grid.Row="1"><Run Language="fr-fr" Text="Mileage"/></TextBlock>
                <TextBox x:Name="Email_Copy4"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="526,149,50,239" Grid.Row="1" >

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBox x:Name="Email_Copy5"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="526,196,50,192" Grid.Row="1" >

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="526,179,50,223" Grid.Row="1"><Run Language="fr-fr" Text="Status"/></TextBlock>
                <Button Content="" HorizontalAlignment="Left" Height="40" Margin="23,150,0,0" Grid.Row="1" VerticalAlignment="Top" Width="85">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/image-upload_13434886.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="526,229,50,173" Grid.Row="1" RenderTransformOrigin="0.736,2.048"><Run Language="fr-fr" Text="DailyRate"/></TextBlock>
                <TextBox x:Name="Email_Copy6"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    VerticalContentAlignment="Center"
                    Padding="20,0,0,0" Margin="526,247,50,141" Grid.Row="1" >

                    <TextBox.Background>
                        <ImageBrush 
                            Stretch="None"
                            AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <ComboBox HorizontalAlignment="Center" Height="24" Margin="0,311,0,0" Grid.Row="1" VerticalAlignment="Top" Width="193"/>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="302,292,274,110" Grid.Row="1"><Run Language="fr-fr" Text="Type Vehicle"/></TextBlock>
                <TextBlock
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="166,189,410,213" Grid.Row="1"><Run Language="fr-fr" Text="Years"/></TextBlock>



            </Grid>

        </Border>

    </Border>
</Window>
