@model IEnumerable<CarRental.Models.Reservation>
    @{
    ViewData["Title"] = "My Reservations";
    }

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My Reservations</h2>
            <a asp-action="Create" class="btn btn-primary">New Reservation</a>
        </div>

        @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any reservations yet. <a asp-action="Create">Create your first reservation!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Vehicle</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                    <tr>
                        <td>@reservation.Vehicle?.Brand @reservation.Vehicle?.Model</td>
                        <td>@reservation.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@reservation.EndDate.ToString("dd/MM/yyyy")</td>
                        <td>$@reservation.TotalAmount</td>
                        <td>
                            <span class="badge
                                    @(reservation.Status == "Confirmed" ? "bg-success" :
                                      reservation.Status == "Pending" ? "bg-warning" :
                                      reservation.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                @reservation.Status
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger">Cancel</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    </div>
